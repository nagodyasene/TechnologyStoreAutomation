{
  "Application": {
    "Name": "Technology Store - Online Ordering",
    "Version": "1.0.0"
  },
  "Ui": {
    "WindowWidth": 1100,
    "WindowHeight": 700,
    "RefreshIntervalMs": 60000
  },
  "Database": {
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "CommandTimeoutSeconds": 30
  },
  "Caching": {
    "ProductListExpirationSeconds": 60,
    "SizeLimit": 512
  },
  "Email": {
    "TestMode": true,
    "SenderEmail": "store@example.com",
    "GmailCredentialsPath": "credentials.json",
    "TokenStorePath": "token"
  },
  "Store": {
    "Name": "Technology Store",
    "Address": "123 Tech Avenue, City, Country",
    "Phone": "+1 (555) 123-4567",
    "Email": "store@example.com",
    "OpeningHours": "Mon-Sat: 9AM-8PM, Sun: 10AM-6PM",
    "TaxRate": 0.10
  }
}
